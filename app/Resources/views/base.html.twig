<!DOCTYPE html>
<html lang="{{ app.request.locale|default('en') }}"{% for attr,val in html_attr|default([]) %} {{attr}}="{{val}}"{% endfor %}>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('build/global.css') }}">
    {% endblock %}

    <title>{{ page_title|default('') }} | The Backstage</title>
  </head>
  <body{% for attr,val in body_attr|default([]) %} {{attr}}="{{val}}"{% endfor %}>
    {% block body %}{% endblock %}
    {% block javascripts %}
        <script src="{{ asset('build/main.js') }}"></script>
    {% endblock %}
  </body>
</html>
